<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                registerCourse
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/registerCourse.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                registerStudent
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/registerStudent.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                viewStudent
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/studentView.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                viewCourse
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/courseView.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                attendanceLists
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/attendanceLists.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                createAttendanceList
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/createAttendanceList.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                #{loginStatusController.isLoggedIn()}
            </if>
            <from-action>
                addStudents
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /content/addStudentsToCourse.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <description>
            login
        </description>
        <from-view-id>
            /login/loginPage.xhtml
        </from-view-id>
        <navigation-case>
            <from-action>
                #{loginController.login()}
            </from-action>
            <from-outcome>
                success
            </from-outcome>
            <redirect>
            </redirect>
            <to-view-id>
                /content/home.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
        
    <navigation-rule>
        <description>
            loginCheck
        </description>
        <from-view-id>
            /content/*
        </from-view-id>
        <navigation-case>
            <if>
                !#{loginStatusController.isLoggedIn()}
            </if>
            <redirect>
            </redirect>
            <to-view-id>
                /login/loginPage.xhtml
            </to-view-id>
        </navigation-case>
            
    </navigation-rule>
    
    <navigation-rule>
        <description>
            navigation
        </description>
        <from-view-id>
            *
        </from-view-id>
        <navigation-case>
            <from-action>
                viewCourses
            </from-action>
            <redirect>
            </redirect>
            <to-view-id>
                /viewCourses.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
